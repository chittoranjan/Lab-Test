@model Model.DtoModels.ExpenseDtoModels.ExpenseItemDto
@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid mt-3">
    <div class="p-2 bg-primary text-white text-left">
        <h5>Expense Item Delete</h5>
    </div>
    <div class="row p-2">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <div class="row">
                <h5 class="text-danger">Are you sure you want to delete this?</h5>
            </div>
            <hr/>
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    : @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.UnitPrice)
                </dt>
                <dd class="col-sm-9">
                    : @Html.DisplayFor(model => model.UnitPrice)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-9">
                    : @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger btn-width" />
                <a asp-action="Index"><input type="button" value="List" class="btn btn-info btn-width" /></a>
            </form>
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>
