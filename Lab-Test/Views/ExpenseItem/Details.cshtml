@using Model.Utilities
@model Model.DtoModels.ExpenseDtoModels.ExpenseItemDto

@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white text-left">
            <h6>Expense Item Details</h6>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-sm-3">
                                    <span class="font-weight-bold">@Html.DisplayNameFor(model => model.Name)</span>
                                </div>
                                <div class="col-sm-9 bg-color">
                                    @Html.DisplayFor(model => model.Name)
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-sm-3">
                                    <span class="font-weight-bold">@Html.DisplayNameFor(model => model.UnitPrice)</span>
                                </div>
                                <div class="col-sm-9 bg-color">
                                    @Html.DisplayFor(model => model.UnitPrice)
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-sm-3">
                                    <span class="font-weight-bold">@Html.DisplayNameFor(model => model.Description)</span>
                                </div>
                                <div class="col-sm-9 bg-color">
                                    @Html.DisplayFor(model => model.Description)
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-sm-3">
                                </div>
                                <div class="col-sm-9 bg-color">
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group text-right">
                        <a asp-action="Edit" asp-route-id="@Model.Id"><input type="button" value="Edit" class="btn btn-primary btn-width" /></a>
                        <a asp-action="Search"><input type="button" value="List" class="btn btn-info btn-width" /></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

