@model Model.DtoModels.ExpenseDtoModels.ExpenseItemDto

@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid mt-3">
    <div class="p-2 bg-primary text-white text-left">
        <h5>Expense Item Detail</h5>
    </div>
    <div class="row p-2">
        <div class="col-sm-3"></div>
        <div class="col-sm-6">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    : @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.UnitPrice)
                </dt>
                <dd class="col-sm-9">
                    : @Html.DisplayFor(model => model.UnitPrice)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-9">
                    : @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>
            <div class="form-group">
                <a asp-action="Edit" asp-route-id="@Model.Id"><input type="button" value="Edit" class="btn btn-primary btn-width" /></a>
                <a asp-action="Index"><input type="button" value="List" class="btn btn-info btn-width"/></a>
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>

