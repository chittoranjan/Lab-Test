@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Model.DtoModels.ExpenseDtoModels.ExpenseDto

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white text-left">
            <h6>Expense Delete</h6>
        </div>
        <div class="card-body">
            <div class="text-left pb-2">
                <strong class="text-danger">Are you sure you want to delete this?</strong>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-sm-3">
                                    <span class="font-weight-bold">@Html.DisplayNameFor(model => model.Title)</span>
                                </div>
                                <div class="col-sm-9 bg-color">
                                    @Html.DisplayFor(model => model.Title)
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-sm-3">
                                    <span class="font-weight-bold">@Html.DisplayNameFor(model => model.Date)</span>
                                </div>
                                <div class="col-sm-9 bg-color">
                                    @Html.DisplayFor(model => model.Date)
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-sm-3">
                                    <span class="font-weight-bold">@Html.DisplayNameFor(model => model.Description)</span>
                                </div>
                                <div class="col-sm-9 bg-color">
                                    @Html.DisplayFor(model => model.Description)
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-sm-3">
                                </div>
                                <div class="col-sm-9 bg-color">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            <strong>Expense Detail Items:</strong>
                        </div>
                    </div>
                    <div class="form-group pt-2">
                        <div class="table-responsive">
                            <table class="table table-bordered">
                                <thead class="thead-light">
                                    <tr>
                                        <th>
                                            SL
                                        </th>
                                        <th>
                                            Item Name
                                        </th>
                                        <th>
                                            Qty
                                        </th>
                                        <th>
                                            Unit Price
                                        </th>
                                        <th>
                                            Unit Discount
                                        </th>
                                        <th>
                                            Total Price
                                        </th>
                                        <th>
                                            Note
                                        </th>
                                    </tr>
                                </thead>
                                <tbody id="ExpenseDetailTable">
                                    @if (Model is { Details.Count: > 0 })
                                    {
                                        var sl = 0;
                                        foreach (var detail in Model.Details)
                                        {
                                            <tr>
                                                <td>@(++sl)</td>
                                                <td>@detail.ExpenseItemName</td>
                                                <td>@detail.Qty</td>
                                                <td>@detail.UnitPrice</td>
                                                <td>@detail.Discount</td>
                                                <td>@detail.Price</td>
                                                <td>@detail.Note</td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group text-right">
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Delete" class="btn btn-danger btn-width" />
                            <a asp-action="Search"><input type="button" value="List" class="btn btn-info btn-width" /></a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
